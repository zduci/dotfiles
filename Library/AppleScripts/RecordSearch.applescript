on replaceString(theText, oldString, newString)	set AppleScript's text item delimiters to oldString	set tempList to every text item of theText	set AppleScript's text item delimiters to newString	set theText to the tempList as string	set AppleScript's text item delimiters to ""	return theTextend replaceStringset the record_name to text returned of Â¬	(display dialog "Record name:" with title "Search For Record" default answer "" default button 2)set the record_name to replaceString(record_name, " ", "+")open location "http://www.discogs.com/sell/list?ships_from=United+States&format=Vinyl&q=" & record_name & "&sort=price%2Casc"open location "http://www.amazon.com/s/ref=nb_sb_noss?url=search-alias%3Daps&field-keywords=" & record_name & "+vinyl&x=0&y=0"open location "http://vinyl-records.soundstagedirect.com/search?w=" & record_name & "&asug="open location "http://www.insound.com/search/?query=" & record_name